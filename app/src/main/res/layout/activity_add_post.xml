<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity"
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/topbar"
       android:paddingVertical="5dp"
       android:paddingHorizontal="5dp"
       android:background="@color/white"
       android:elevation="5dp"
       >
       <com.google.android.material.button.MaterialButton
           style="@style/Widget.Material3.Button.IconButton"
           android:id="@+id/btn_back"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:icon="@drawable/baseline_arrow_back_24"
           app:iconTint="@color/black"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/btn_back"
           android:layout_alignParentTop="true"
           android:text="Create Post"
           android:layout_marginTop="12dp"
           android:textSize="16sp"
           android:layout_marginStart="10dp"
           />
       <com.google.android.material.button.MaterialButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="POST"
           style="@style/Widget.Material3.Button.IconButton"
           android:textColor="@color/dark_blue"
           android:layout_alignParentEnd="true"
           android:layout_alignParentTop="true"
           android:textStyle="bold"
           android:id="@+id/btn_post_top"
           />
   </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/topbar"
        android:layout_alignParentStart="true"
        android:src="@drawable/belle_profile"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imageView_profile"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belle Soriano"
        android:layout_toRightOf="@id/imageView_profile"
        android:layout_below="@id/topbar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/textView_name"
        />
    <TextView
        android:background="@drawable/rounded_card_bg"
        android:backgroundTint="@color/gray_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        android:layout_toRightOf="@id/imageView_profile"
        android:layout_below="@id/textView_name"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingVertical="5dp"
        android:paddingHorizontal="8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:hint="What's on your mind?"
        android:layout_below="@id/imageView_profile"
        android:gravity="top"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/edittext_bg"
        android:textSize="18sp"
        android:id="@+id/editText_content"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_view_post_backgrounds"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_below="@id/editText_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        tools:listitem="@layout/post_bg_list_layout"
        tools:itemCount="5"
        />


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycle_view_post_backgrounds"
        android:text="Add a photo"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:paddingHorizontal="2dp"
        app:icon="@drawable/baseline_image_24"
        app:iconPadding="8dp"
        android:textColor="@color/black"
        app:iconTint="@color/blue"
        android:id="@+id/btn_add_photo"
        />
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/btn_add_photo"
        android:id="@+id/post_photo_container"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

        <ImageButton
            android:id="@+id/btn_change_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/btn_remove_photo"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:src="@drawable/edit_btn_icon"
            android:translationZ="5dp" />
        <ImageButton
            android:id="@+id/btn_remove_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:src="@drawable/remove_btn_icon"
            android:translationZ="5dp" />
        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/belle_cover_photo"
            android:id="@+id/imageView_post_photo"
            />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Post"
        android:layout_below="@id/post_photo_container"
        android:backgroundTint="@color/blue"
        app:rippleColor="#1794D1"
        android:layout_marginHorizontal="10dp"
        app:cornerRadius="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:id="@+id/btn_post"
        />
</RelativeLayout>