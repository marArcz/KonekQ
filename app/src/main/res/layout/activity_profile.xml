<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo_homepage"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="-30dp"
                app:srcCompat="@drawable/otherlogo_newsfeed" />

            <ImageButton
                android:id="@+id/btnhome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/baseline_home_24" />

            <ImageButton
                android:id="@+id/btnaddfriend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/baseline_person_24" />

            <ImageButton
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/baseline_notifications_24" />

            <ImageButton
                android:id="@+id/btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/baseline_menu_24" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <RelativeLayout
            android:id="@+id/profile_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cover_photo"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                app:srcCompat="@drawable/belle_cover_photo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cover_photo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-120dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/profile_photo"
                android:elevation="5dp"
                android:padding="5dp"
             >
                <ImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:background="@drawable/profile_photo"
                    android:clipToOutline="true"
                    android:src="@drawable/belle_profile" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
             android:layout_below="@+id/profile_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belle Soriano"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnprofile_edit"
                android:layout_width="155dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_bg"
                android:drawableStart="@drawable/baseline_edit_24"
                android:paddingStart="15dp"
                android:text="Edit profile"
                android:textColor="@color/white" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray"/>
        <ListView
            android:id="@+id/profile_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>